{
  "name": "social-network-backend",
  "version": "1.0.0",
  "description": "Backend API for Social Network Mini-App with Neo4j and MongoDB integration",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "seed": "node src/utils/seedData.js",
    "seed:full": "node scripts/seedDatabase.js",
    "seed:reset": "node scripts/seedDatabase.js --reset",
    "seed:neo4j": "node scripts/seedNeo4jGraph.js",
    "seed:neo4j-reset": "node scripts/seedNeo4jGraph.js --reset",
    "seed:demo": "node scripts/seedDatabase.js --users=10 --posts=20",
    "seed:large": "node scripts/seedDatabase.js --users=100 --posts=200",
    "init": "node scripts/initDatabase.js",
    "init:force": "node scripts/initDatabase.js --force"
  },
  "keywords": [
    "social-network",
    "neo4j",
    "mongodb",
    "graph-database",
    "nodejs"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "form-data": "^4.0.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "neo4j-driver": "^5.15.0",
    "socket.io": "^4.7.4",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  }
}
