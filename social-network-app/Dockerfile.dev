FROM node:22-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Expose port
EXPOSE 5173

# Development command with hot reload
# Skip build step for development - vite dev server handles compilation
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]